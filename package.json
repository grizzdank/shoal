{
  "name": "shoal",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r --if-present test",
    "db:migrate": "pnpm --filter @shoal/api db:migrate",
    "db:check": "pnpm --filter @shoal/api db:check",
    "ci:check": "pnpm lint && pnpm typecheck && pnpm test && pnpm db:check"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  }
}
